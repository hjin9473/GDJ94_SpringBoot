<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.winter.app.board.notice.NoticeDAO">
    	<select id="detail" parameterType="com.winter.app.board.notice.NoticeDTO" resultType="com.winter.app.board.notice.NoticeDTO" >
    		SELECT * FROM notice WHERE board_num=#{boardNum}
    	</select>
    	<select id="list" resultType="com.winter.app.board.notice.NoticeDTO">
    		SELECT * FROM notice ORDER BY board_num DESC
    	</select>
    	<insert id="add" parameterType="com.winter.app.board.notice.NoticeDTO">
    		INSERT INTO notice (board_title,board_writer,board_contents) VALUES (#{boardTitle},#{boardWriter},#{boardContents})
    	</insert>
    	<update id="update" parameterType="com.winter.app.board.notice.NoticeDTO">
    		UPDATE notice SET board_title=#{boardTitle}, board_writer=#{boardWriter}, board_contents=#{boardContents} WHERE board_num=#{boardNum}
    	</update>
    	<delete id="delete" parameterType="com.winter.app.board.notice.NoticeDTO">
    		DELETE FROM notice WHERE board_num=#{boardNum}
    	</delete>
    </mapper>